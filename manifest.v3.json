{
    "name": "Lectio Master",
    "description": "Lectio men bedre",
    "manifest_version": 3,
    "version": "0.6.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
		"service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.lectio.dk/*"],
            "js": [
                "js/alle.js", 
                "js/opgaver.js", 
                "js/skema.js", 
                "js/karakter.js", 
                "js/forside.js", 
                "js/skolevalg.js", 
                "/js/login.js", 
                "js/beskeder.js", 
                "js/ledige.js",
                "inject.js"
            ], 
            "css": ["css/main.css"],
            "web_accessible_resources": ["images/lectio_logo.png"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "permissions": ["storage"]
}